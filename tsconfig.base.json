{
  "compilerOptions": {
    "declaration": false,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"],
    "paths": {
      "@org/faq-data": ["libs/faq-data/src/index.ts"],
      "@org/styles": ["libs/styles/src/index.ts"]
    }
  }
}
